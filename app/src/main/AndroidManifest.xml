<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alejandrocorrero.room">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.company.detail.DetailActivity" android:label="@string/activity_company_label"
            android:parentActivityName=".ui.main.MainActivity" />
        <activity
            android:name=".ui.main.PreferencesActivity" android:label="@string/activity_preferences_label"
            android:parentActivityName=".ui.main.MainActivity" />
        <activity
            android:name=".ui.about.AboutActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" />
        <activity
            android:name=".ui.student.detail.DetailStudentActivity" android:label="@string/activity_student_label"
            android:parentActivityName=".ui.student.detail.DetailStudentActivity" />
        <activity
            android:name=".ui.visit.detail.DetailVisitActivity" android:label="@string/activity_visit"
            android:parentActivityName=".ui.visit.detail.DetailVisitActivity" />
    </application>

</manifest>